<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset OTP</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    
</head>
<body>
    <div class="reset-container">
        <% if (success && success.length > 0) { %>
            <% success.forEach((msg) => { %>
                <p class="flash-success"><%= msg %></p>
            <% }) %>
        <% } %>

        <% if (errors && errors.length > 0) { %>
            <% errors.forEach((msg) => { %>
                <p class="flash-error"><%= msg %></p>
            <% }) %>
        <% } %>
        <div class="passbox">
        <form action="/api/auth/verifyResetOtp" method="post">
            <div class="mb-3">
                <label for="newPassword">Enter OTP: </label>
                <input type="text" name="otp" pattern="\d{6}" maxlength="6" required>
            </div>
            <div class="mb-3 btn-box">
                <button class="btn btn-primary submit-btn">Verify Otp</button>
            </div>
            
        </form>
        
    </div>
    </div>
    
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
</body>
</html>