<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=profile.name%></title>
    <link rel="stylesheet" href="/css/home.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
            <div class="info">
                <div class="pfp"> 
                    <img src="<%= profile.pfp.url%>" class="dp shadow-lg">
                 </div>
                <div class="textInfo">
                    <h1>@<%=profile.name%></h1>
                    <p class="bio">
                        <i><%=profile.bio%></i></p>
                    <button id="shareBtn" class="btn btn-secondary submit-btn">Share Profile</button>
                </div>
                
            </div>
            <div class="posts">
                <div class="row mt-1">
                        <% profile.posts.forEach(post => { %>
                            <div class="col-12 col-md-6 col-lg-3 mb-1">
                                <div class="card mb-3 ml-2 post" style="width: 18rem;">
                                <img src="<%= post.url %>" class="card-img-top card-img">
                                <div class="card-body">
                                    <h5 class="card-title">@<%= profile.name %></h5>
                                    <p class="card-text"><%= post.title %></p>
                                </div>
                            </div>
                            </div>
                            
                            
                        <% }) %>
            </div>
            

            </div>
            
        <script>
            document.getElementById("shareBtn").addEventListener("click", function () {
                const profileURL = `${window.location.origin}/api/auth/profile/<%=profile.id%>`;
                navigator.clipboard.writeText(profileURL)
                    .then(() => {
                        alert("Profile link copied to clipboard!");
                    })
                    .catch((err) => {
                        alert("Failed to copy link");
                        console.error(err);
                    });
            });
        </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
</body>
</html>