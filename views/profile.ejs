<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= profile.name %></title>
  <link rel="stylesheet" href="/css/home.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: #d1d1d1;
      overflow-x: hidden;
    }

    .info {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: 2rem;
    }

    .pfp, .textInfo {
      flex: 1 1 100%;
      max-width: 400px;
      padding: 1rem;
    }

    .dp {
      width: 100%;
      max-width: 300px;
      height: auto;
      border-radius: 50%;
      object-fit: cover;
    }

    .bio {
      font-weight: 400;
      margin-top: 1rem;
    }

    .submit-btn {
      background-color: #0d0d0d!important;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      margin-top: 1rem;
    }

    .posts-masonry {
      column-count: 1;
      column-gap: 1rem;
      padding: 1rem;
    }

    @media (min-width: 576px) {
      .posts-masonry {
        column-count: 2;
      }
    }

    @media (min-width: 768px) {
      .posts-masonry {
        column-count: 3;
      }
    }

    @media (min-width: 992px) {
      .posts-masonry {
        column-count: 4;
      }
    }

    .post {
      display: inline-block;
      width: 100%;
      margin-bottom: 1rem;
      break-inside: avoid;
      background: white;
      border-radius: 0.5rem;
    }

    .card-img {
      width: 100%;
      height: auto;
      object-fit: cover;
    }

    .card-body {
      padding: 1rem;
    }
  </style>
</head>
<body>

  <div class="profile-info">
    <div class="pfp">
      <img src="<%= profile.pfp.url %>" class="dp shadow-lg">
    </div>
    <div class="textInfo">
      <h1>@<%= profile.name %></h1>
      <p class="bio bio-profile"><i><%= profile.bio %></i></p>
      <button id="shareBtn" class="btn btn-secondary submit-btn">Share Profile</button>
      
      <button class="btn btn-primary submit-btn"><a href="/api/auth/register">Create Account</a></button>
    </div>
  </div>

  <div class="posts-masonry">
    <% profile.posts.forEach(post => { %>
      <div class="card post">
        <img src="<%= post.url %>" class="card-img-top card-img">
        <div class="card-body">
          <h5 class="card-title">@<%= profile.name %></h5>
          <p class="card-text"><%= post.title %></p>
        </div>
      </div>
    <% }) %>
  </div>

  <script>
    document.getElementById("shareBtn").addEventListener("click", function () {
      const profileURL = `${window.location.origin}/api/auth/profile/<%= profile.id %>`;
      navigator.clipboard.writeText(profileURL)
        .then(() => alert("Profile link copied to clipboard!"))
        .catch((err) => {
          alert("Failed to copy link");
          console.error(err);
        });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
